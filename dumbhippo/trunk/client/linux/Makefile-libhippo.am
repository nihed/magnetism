noinst_LTLIBRARIES += libhippo.la

libhippo_la_CPPFLAGS =			\
	$(AM_CPPFLAGS)			\
	-I $(MARSHAL_DIR)		\
	$(LIBHIPPO_CFLAGS)		\
	-DDDM_I_KNOW_THIS_IS_UNSTABLE=1

libhippo_la_LIBADD = 			\
	$(LIBHIPPO_LIBS)		\
	libddm-1.la

